<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.healthtracker.ui.home.HomeFragment"

        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.healthtracker.ui.dashboard.DashboardFragment"

        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.healthtracker.ui.account.AccountFragment"

        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_navigation_notifications_to_registerActivity"
            app:destination="@id/registerActivity" />
    </fragment>
    <activity
        android:id="@+id/registerActivity"
        android:name="com.example.healthtracker.ui.RegisterActivity"
        android:label="RegisterActivity" />
    <fragment
        android:id="@+id/codeInputFragment"
        android:name="com.example.healthtracker.ui.forgotten_passwords.CodeInputFragment"
        android:label="fragment_code_input"
        tools:layout="@layout/fragment_code_input" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.healthtracker.ui.forgotten_passwords.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_codeInputFragment"
            app:destination="@id/codeInputFragment" />
    </fragment>


</navigation>