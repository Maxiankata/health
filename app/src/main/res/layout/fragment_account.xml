<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context=".ui.account.AccountFragment"
    >
    <ImageView
        android:layout_marginVertical="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings"
        android:layout_gravity="end"
        app:tint="@color/input_grey"

        />
<!--    TODO() ADD BACKGROUND IMAGE PICKING MAYBE :)-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:padding="5dp"
        android:paddingBottom="0dp"
        >
        <ImageView

            android:id="@+id/profile_photo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/profile_photo_placeholder"
            android:scaleType="centerCrop"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/name_placeholder"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"

        />
    <TextView
        android:id="@+id/total_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_steps"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/nav_bar_dark_background"
        android:gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        />

    <LinearLayout
        android:id="@+id/statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_green"
        android:padding="5dp"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/statistics"

            android:layout_marginEnd="5dp"
            />
        <TextView
            android:id="@+id/statisticstext"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/nav_bar_dark_background"
            android:textSize="16sp"
            android:layout_height="match_parent"
            android:text="@string/statistics"
            />
    </LinearLayout>
    <LinearLayout

        android:id="@+id/friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_green"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/friends"
            android:layout_marginEnd="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/nav_bar_dark_background"
            android:textSize="16sp"
            android:layout_height="match_parent"
            android:text="@string/friends"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/achievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_green"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/medal"
            android:layout_marginEnd="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/nav_bar_dark_background"
            android:textSize="16sp"
            android:layout_height="match_parent"
            android:text="@string/achievements"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_green"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/exit_account"
            android:layout_marginEnd="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/nav_bar_dark_background"
            android:textSize="16sp"
            android:layout_height="match_parent"
            android:text="@string/action_sign_out"
            />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>